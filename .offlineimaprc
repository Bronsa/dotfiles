[general]
ui = ttyui
accounts = Gmail

[Account Gmail]
localrepository = Gmail-Local
remoterepository = Gmail-Remote

[Repository Gmail-Local]
type = Maildir
localfolders = ~/.mail

[Repository Gmail-Remote]
type = Gmail
remoteuser = brobronsa@gmail.com
remotepass = <password>
realdelete = no
maxconnections = 3

sslcacertfile = /etc/ssl/certs/ca-certificates.crt
